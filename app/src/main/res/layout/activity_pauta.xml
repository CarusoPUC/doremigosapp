<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pauta_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".PautaActivity">

    <ImageView
        android:id="@+id/confettiView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/btnVoltar"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:background="@drawable/bg_back_button"
        android:src="@drawable/ic_back_button"
        android:contentDescription="Voltar"
        android:layout_margin="16dp"
        android:elevation="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:background="#fff"
        android:layout_marginRight="66dp"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/tvSom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Replay"
            android:textColor="#2D89B7"
            android:textSize="20sp"
            android:layout_marginBottom="8dp"/>

    <ImageButton
        android:id="@+id/btnSom"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:background="@drawable/bg_back_button"
        android:src="@drawable/ic_play"
        android:contentDescription="Voltar"
        app:tint="#009be8" />
    </LinearLayout>

    <!-- Imagem da pauta sem notas -->
    <ImageView
        android:id="@+id/imgPauta"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginTop="-60dp"
        app:layout_constraintTop_toBottomOf="@id/btnVoltar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/paletaNotas"
        app:srcCompat="@raw/palheta"
        tools:ignore="ContentDescription" />

    <!-- Área onde as notas cinzas aparecem sobre a pauta -->
    <FrameLayout
        android:id="@+id/overlayNotas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="false"
        android:fitsSystemWindows="false"
        app:layout_constraintTop_toTopOf="@id/imgPauta"
        app:layout_constraintBottom_toBottomOf="@id/imgPauta"
        app:layout_constraintStart_toStartOf="@id/imgPauta"
        app:layout_constraintEnd_toEndOf="@id/imgPauta">

        <!-- 8 notas cinzas (nc.png) já posicionadas em diagonal.
             Ajuste os margins conforme o tamanho real dos seus PNGs. -->
        <ImageView
            android:id="@+id/nc1"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="start|bottom"
            android:translationX="236dp"
            android:translationY="-60dp"
            app:srcCompat="@raw/ndc" />

        <ImageView
            android:id="@+id/nc2"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="start|bottom"
            android:translationX="336dp"
            android:translationY="-78dp"
            app:srcCompat="@raw/nc" />

        <ImageView
            android:id="@+id/nc3"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="start|bottom"
            android:translationX="436dp"
            android:translationY="-106dp"
            app:srcCompat="@raw/nc" />

        <ImageView
            android:id="@+id/nc4"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="start|bottom"
            android:translationX="536dp"
            android:translationY="-133dp"
            app:srcCompat="@raw/nc" />

        <ImageView
            android:id="@+id/nc5"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="start|bottom"
            android:translationX="636dp"
            android:translationY="-165dp"
            app:srcCompat="@raw/nc" />

        <ImageView
            android:id="@+id/nc6"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="start|bottom"
            android:translationX="736dp"
            android:translationY="-193dp"
            app:srcCompat="@raw/nc" />

        <ImageView
            android:id="@+id/nc7"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="start|bottom"
            android:translationX="836dp"
            android:translationY="-222dp"
            app:srcCompat="@raw/nc" />

        <ImageView
            android:id="@+id/nc8"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="start|bottom"
            android:translationX="936dp"
            android:translationY="-248dp"
            app:srcCompat="@raw/nc" />
    </FrameLayout>

    <!-- Paleta inferior com os pincéis p1..p7 (notas coloridas) -->
    <LinearLayout
        android:id="@+id/paletaNotas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="0dp"
        android:layout_marginBottom="-140dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- P1 - Dó -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DÓ"
                android:textSize="25sp"
                android:textColor="#FF7FB3"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-medium"/>

            <ImageButton
                android:id="@+id/brush_p1"
                style="?attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="272dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@raw/p1" />
        </LinearLayout>

        <!-- P2 - Mi -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MI"
                android:textSize="25sp"
                android:textColor="#2D89B7"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-medium"/>

            <ImageButton
                android:id="@+id/brush_p2"
                style="?attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="272dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@raw/p2" />
        </LinearLayout>

        <!-- P3 - Lá -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LÁ"
                android:textSize="25sp"
                android:textColor="#FA8430"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-medium"/>

            <ImageButton
                android:id="@+id/brush_p3"
                style="?attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="272dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@raw/p3" />
        </LinearLayout>

        <!-- P4 - Ré -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RÉ"
                android:textSize="25sp"
                android:textColor="#FFC830"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-medium"/>

            <ImageButton
                android:id="@+id/brush_p4"
                style="?attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="272dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@raw/p4" />
        </LinearLayout>

        <!-- P5 - Fá -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FÁ"
                android:textSize="25sp"
                android:textColor="#00A491"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-medium"/>

            <ImageButton
                android:id="@+id/brush_p5"
                style="?attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="272dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@raw/p5" />
        </LinearLayout>

        <!-- P6 - Sol -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SOL"
                android:textSize="25sp"
                android:textColor="#B46EFB"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-medium"/>

            <ImageButton
                android:id="@+id/brush_p6"
                style="?attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="272dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@raw/p6" />
        </LinearLayout>

        <!-- P7 - Si -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SI"
                android:textSize="25sp"
                android:textColor="#FF3E3E"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-medium"/>

            <ImageButton
                android:id="@+id/brush_p7"
                style="?attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="272dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@raw/p7" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="16dp">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="306dp"
        android:layout_height="195dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitCenter"
        android:src="@raw/logo" />

    <!-- Caixa do tÃ­tulo centralizada -->
    <TextView
        android:id="@+id/tvFerramentas"
        android:layout_width="710dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:background="@drawable/bg_title_box"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:text="FERRAMENTAS DE APRENDIZAGEM"
        android:textColor="#2D89B7"
        android:translationX="140dp"
        android:textAlignment="center"
        android:textSize="33sp"
        android:textStyle="bold" />

    <!-- Linha de cards -->
    <LinearLayout
        android:id="@+id/containerCards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvFerramentas"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="112dp"
        android:weightSum="4"
        >

        <!-- Card Piano Virtual -->
        <LinearLayout
            android:id="@+id/btnPianoVirtual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp"
            android:layout_marginVertical="12dp"
            android:layout_marginRight="48dp"
            android:background="@drawable/bg_card"
            android:elevation="6dp">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:scaleType="fitCenter"
                android:src="@raw/piano"
                android:contentDescription="Piano Virtual" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PIANO VIRTUAL"
                android:textColor="#2D89B7"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Card Pauta -->
        <LinearLayout
            android:id="@+id/btnPauta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp"
            android:layout_marginVertical="12dp"
            android:background="@drawable/bg_card"
            android:elevation="6dp">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:scaleType="fitCenter"
                android:src="@raw/pauta"
                android:contentDescription="Pauta" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAUTA"
                android:textColor="#2D89B7"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

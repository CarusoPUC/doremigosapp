<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:padding="18dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bae4f9">

    <!-- Guidelines verticais -->
    <!-- Guidelines verticais para 8 teclas brancas (Dó até o próximo Dó) -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.0"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.125"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.375"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.625"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.875"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="1.0"/>


    <!-- Teclas brancas -->
    <FrameLayout
        android:id="@+id/key_do"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/white_key_do"
        android:clickable="true"
        android:focusable="true"
        android:elevation="6dp"
        app:layout_constraintStart_toStartOf="@id/g0"
        app:layout_constraintEnd_toStartOf="@id/g1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/label_do"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:paddingBottom="25dp"
            android:text="DÓ"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#E91E63"
            android:textSize="24sp"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/key_re"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/white_key_re"
        android:clickable="true"
        android:focusable="true"
        android:elevation="6dp"
        app:layout_constraintStart_toStartOf="@id/g1"
        app:layout_constraintEnd_toStartOf="@id/g2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:paddingBottom="25dp"
            android:text="RÉ"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#FFC107"
            android:textSize="24sp"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/key_mi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/white_key_mi"
        android:clickable="true"
        android:focusable="true"
        android:elevation="6dp"
        app:layout_constraintStart_toStartOf="@id/g2"
        app:layout_constraintEnd_toStartOf="@id/g3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:paddingBottom="25dp"
            android:text="MI"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#2196F3"
            android:textSize="24sp"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/key_fa"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/white_key_fa"
        android:clickable="true"
        android:focusable="true"
        android:elevation="6dp"
        app:layout_constraintStart_toStartOf="@id/g3"
        app:layout_constraintEnd_toStartOf="@id/g4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:paddingBottom="25dp"
            android:text="FA"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#009688"
            android:textSize="24sp"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/key_sol"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/white_key_sol"
        android:clickable="true"
        android:focusable="true"
        android:elevation="6dp"
        app:layout_constraintStart_toStartOf="@id/g4"
        app:layout_constraintEnd_toStartOf="@id/g5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:paddingBottom="25dp"
            android:text="SOL"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#9C27B0"
            android:textSize="24sp"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/key_la"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/white_key_la"
        android:clickable="true"
        android:focusable="true"
        android:elevation="6dp"
        app:layout_constraintStart_toStartOf="@id/g5"
        app:layout_constraintEnd_toStartOf="@id/g6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:paddingBottom="25dp"
            android:text="LA"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#FF9800"
            android:textSize="24sp"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/key_si"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/white_key_si"
        android:clickable="true"
        android:focusable="true"
        android:elevation="6dp"
        app:layout_constraintStart_toStartOf="@id/g6"
        app:layout_constraintEnd_toStartOf="@id/g7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:paddingBottom="25dp"
            android:text="SI"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#F44336"
            android:textSize="24sp"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/key_dod"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/white_key_do"
        android:clickable="true"
        android:focusable="true"
        android:elevation="6dp"
        app:layout_constraintStart_toStartOf="@id/g7"
        app:layout_constraintEnd_toStartOf="@id/g8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/label_dod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:paddingBottom="25dp"
            android:text="DÓ"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#E91E63"
            android:textSize="24sp"/>
    </FrameLayout>



    <!-- Teclas pretas (apenas visual) -->
    <View
        android:id="@+id/key_do_sus"
        android:layout_width="70dp"
        android:layout_height="350dp"
        android:background="@drawable/black_key_bg"
        android:elevation="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/key_do"
        app:layout_constraintEnd_toEndOf="@id/key_re"/>

    <View
        android:id="@+id/key_re_sus"
        android:layout_width="70dp"
        android:layout_height="350dp"
        android:background="@drawable/black_key_bg"
        android:elevation="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/key_re"
        app:layout_constraintEnd_toEndOf="@id/key_mi"/>

    <View
        android:id="@+id/key_fa_sus"
        android:layout_width="70dp"
        android:layout_height="350dp"
        android:background="@drawable/black_key_bg"
        android:elevation="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/key_fa"
        app:layout_constraintEnd_toEndOf="@id/key_sol"/>

    <View
        android:id="@+id/key_sol_sus"
        android:layout_width="70dp"
        android:layout_height="350dp"
        android:background="@drawable/black_key_bg"
        android:elevation="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/key_sol"
        app:layout_constraintEnd_toEndOf="@id/key_la"/>

    <View
        android:id="@+id/key_la_sus"
        android:layout_width="70dp"
        android:layout_height="350dp"
        android:background="@drawable/black_key_bg"
        android:elevation="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/key_la"
        app:layout_constraintEnd_toEndOf="@id/key_si"/>

</androidx.constraintlayout.widget.ConstraintLayout>
